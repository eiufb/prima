        <p class="text-gray-600 text-[8px] uppercase tracking-[0.5em]">Cali, Colombia ¬∑ 2026</p>
    </footer>

    <script>
        const lenis = new Lenis();
        function raf(time) { lenis.raf(time); requestAnimationFrame(raf); }
        requestAnimationFrame(raf);

        function seleccionarRitual(nombre, precio) {
            document.getElementById('prod-name').value = nombre;
            // Scroll suave hacia el formulario
            lenis.scrollTo('#reserva', { offset: -50 });
            // Peque√±o efecto visual en el input
            gsap.fromTo("#prod-name", {backgroundColor: "#c5a059"}, {backgroundColor: "#faf9f6", duration: 1});
        }

        function enviarPedido() {
            const product = document.getElementById('prod-name').value;
            const quantity = document.getElementById('prod-qty').value;
            const name = document.getElementById('client-name').value;
            const time = document.getElementById('agenda-time').value;

            if(!product || !name || !time) {
                alert("Por favor selecciona un ritual y completa tus datos.");
                return;
            }

            const mensaje = `‚ú® *Reserva Afro Rose* ‚ú®\n\n` +
                            `üë§ *Cliente:* ${name}\n` +
                            `üíÜ *Ritual:* ${product}\n` +
                            `üî¢ *Cantidad:* ${quantity}\n` +
                            `üìÖ *Horario:* ${time}\n\n` +
                            `Confirmar disponibilidad por favor.`;

            window.open(`https://wa.me/573000000000?text=${encodeURIComponent(mensaje)}`, '_blank');
        }
    </script>
